<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<link href="/Content/app.css" rel="stylesheet" type="text/css">
<!--Content for add page-->
<div id="container">
    <!--Establish the input fields -->
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 id="titleText"><%= title%></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="taskTextField">Assignment Name</label>
                    <input type="text" class="form-control" id="taskTextField"
                    placeholder="Enter the task name" name="task" required>
                </div>
                <div class="form-group">
                    <label for="courseTextField">Course Name</label>
                    <input type="text" class="form-control" id="courseTextField"
                    placeholder="Enter the course name" name="course" required>
                </div>
                <div class="form-group">
                    <label for="weightTextField">Weight</label>
                    <input type="text" class="form-control" id="weightTextField"
                    placeholder="Enter the task weight" name="weight" required>
                </div>
                <div class="form-group">
                    <label for="deadlineTextField">Deadline</label>
                    <input type="text" class="form-control" id="deadlineTextField"
                    placeholder="Enter the deadline" name="deadline" required>
                </div>
                <div class="form-group">
                    <label for="completeTextField">Complete</label>
                    <input type="text" class="form-control" id="completeTextField"
                    placeholder="Enter Y for completed, N for not completed" name="complete" required>
                </div>

                <button class="btn btn-primary" type="submit">Submit</button>
                <i class = "fas fa-edit"></i>

                <button class="btn btn-warning" type="button" onclick="window.location.href = '/tasklist'">Cancel</button>
                <i class = "fas fa-undo"></i>
            </form>
        </div>
    </div>
</div>

<%- include ../Partials/footer.ejs %>